<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shishi02_img"
            android:src="@mipmap/p1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日新闻"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:id="@+id/shishi02_title"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="腾讯新闻"
            android:id="@+id/shishi02_author"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorHui"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-01-05 11:03"
            android:id="@+id/shishi02_time"
            android:textColor="@color/colorHui"
            />
    </LinearLayout>
    <View
        android:id="@+id/item_fengexian"
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_height="0.5dp"
        android:background="@drawable/fengexian"
        />

</LinearLayout>
